{
  "manifest_version": 3,
  "name": "Arcify: Arc like vertical tab spaces",
  "version": "2.1",
  "description": "A sidebar extension that replicates Arc browser's tab management system",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage",
    "bookmarks",
    "commands",
    "favicon"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "options_page":  "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "sidebar.js",
      "options.js",
      "assets/*",
      "_favicon/*"
    ],
    "matches": [
      "<all_urls>"
    ],
    "extension_ids": [
      "*"
    ]
  }],
  "icons": {
    "128": "assets/icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle side panel"
    },
    "quickPinToggle": {
      "suggested_key": {
        "default": "Ctrl+D",
        "mac": "Command+D"
      },
      "description": "Quick Pin/Unpin Tab"
    }
  }
}
